# .git-rc sources this file from your global `.gitconfig`


[color]
        branch  = auto
        diff    = auto
        grep    = auto
        status  = auto

[color "diff"]
       meta = yellow bold

[alias]
        ace  = add-core-excludes -g
        ae   = add-core-excludes -g
        aeg  = add-core-excludes -g
        ael   = add-core-excludes
        age  = add-core-excludes -g
        cf   = config
        cg   = config --global
        cfa  = config --add
        cga  = config --add --global
        cfd  = config --unset
        cgd  = config --unset --global
        cfda = config --unset-all
        cgda = config --unset-all --global
        cfl  = config --get-all
        cgl  = config --get-all --global
        cfs  = config --list
        cgs  = config --list --global
        cfu  = config --unset
        cgu  = config --unset --global
        cfua = config --unset-all
        cgua = config --unset-all --global
        cgdb = config --global init.defaultBranch
        cgdr = config --global clone.defaultRemoteName
        dbm = config --global init.defaultBranch main
        e = expand-alias
        ea = expand-alias
        gdb = config --global init.defaultBranch
        gdbm = config --global init.defaultBranch main
        set-default-branch-main = config --global init.defaultBranch main
        sdbm = set-default-branch-main
        config-default-remote = config --global clone.defaultRemoteName
        cdr = config-default-remote
        gdr = config-default-remote
        sdr = config-default-remote
        config-default-remote-u = config --global clone.defaultRemoteName u
        sdru = config-default-remote-u
        cfi = config --get-all include.path
        cgi = config --get-all --global include.path
        global-config-file = config --get-all --global include.path
        global-git-ignore = add-core-excludes -g
        ggi = global-git-ignore

        cfig = config core.excludesfile
        cfigs = config --get-all core.excludesfile
        cfef = config core.excludesfile
        cfefs = config --get-all core.excludesfile
        cgif = config --global core.excludesfile
        cgig = config --global core.excludesfile
        cgigs = config --get-all --global core.excludesfile
        cgef = config --global core.excludesfile
        cgefs = config --get-all --global core.excludesfile
        cfis = config core.excludesfile
        cgis = config --global core.excludesfile
        cfia = config --add core.excludesfile
        cgia = config --add --global core.excludesfile
        global-ignore-file = config --get-all --global core.excludesfile

        add-global-config-file = add-global-file include.path
        agi = add-global-ignore

        allow-pushes = config receive.denyCurrentBranch ignore
        aps = allow-pushes

        sid = set-id
        sgid = set-id -g
        gsid = set-id -g
        sidg = set-id -g
        sig = set-id -g
        gid = get-id
        gidg = getid -g
        ggid = get-id -g
        fue = config user.email
        fun = config user.name
        fune = user
        gue = config --global user.email
        gun = config --global user.name

        shc = ssh-command
        ue  = config user.email
        un  = config user.name
        une = user
        usr  = user
