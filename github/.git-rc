github_default_remote() {
  local remote
  remote="$(git-find-only-remote github\.com)"
  if [ -z "$remote" ]; then
    remote="$(gh repo set-default --view)"
  fi
  if [ -z "$remote" ]; then
    return 1
  fi
  echo "$remote"
}
export -f github_default_remote
