gh_run_and_job() {
    if [ $# -gt 0 ]; then
        run="$1"; shift
    else
        run="$(gh_last_workflow_run)"
    fi
    if [ $# -gt 0 ]; then
        job_idx="$1"; shift
    else
        job_idx=-1
    fi
    if [ $# -gt 0 ]; then
        echo 'Usage: gh_run_and_job [run_id [job_idx]]' >&2
        return 1
    fi
    gh run view "$run" --json databaseId,jobs | jq "{ run_id: .databaseId, job: .jobs[$job_idx] }"
}
