gh_runners_rm() {
  local repo
  repo="$(github_remote_path)"
  if [ -z "$repo" ]; then
    echo "Failed to determine GitHub repository path" >&2
    return 1
  fi
  local cmd
  for id in "$@"; do
    cmd=(gh api -X DELETE "/repos/$repo/actions/runners/$id")
    echo "Running: ${cmd[*]}" >&2
    if ! "${cmd[@]}"; then
      echo "Failed to remove runner with ID $id" >&2
      return 1
    fi
  done
}
