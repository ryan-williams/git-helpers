[alias]
  l       = ls-files
  ls      = ls-files
  lz      = ls-files -z
  lr      = ls-files --recurse-submodules
  lo      = ls-files --other --exclude-standard --directory --no-empty-directory
  lzo     = ls-files --other --exclude-standard --directory --no-empty-directory -z
  loz     = ls-files --other --exclude-standard --directory --no-empty-directory -z
  lso     = ls-files --other --exclude-standard --directory --no-empty-directory

  lt = ls-tree
  lth = ls-tree HEAD
  lthr = ls-tree -r HEAD
  lthn = ls-tree -r --name-only HEAD
  ltn = ls-tree --name-only
  ltr = ls-tree -r
  tr = ls-tree
  trh = ls-tree HEAD
  trp = ls-tree HEAD^
  trr = ls-tree -r
  ltrn = ls-tree -r --name-only
  lts = ls-tree --abbrev
  ltsh = ls-tree --abbrev HEAD

  tree-full-id = log -n1 --format=%T
  tfi = tree-full-id
  tree-sha = log -n1 --format=%t

  lsh = ls-hashes

  fn = find

  fns = find-suffix
  fs = find-suffix

  fnp = find-prefix
  fp = find-prefix

  lsu = list-unstaged
  lu = list-unstaged

  la = list-status A.   # list added (staged)
  lc = list-status .M   # list changed (unstaged)
  ld = list-status ' D' # list deleted (unstaged)

  # Staged versions
  las = list-status A.  # list added staged
  lcs = list-status M.  # list changed staged
  lds = list-status D.  # list deleted staged

  # Unstaged versions (duplicates for clarity)
  lcu = list-status .M  # list changed unstaged
  ldu = list-status DU  # list deleted unmerged (deleted by us)

  # Cached is alias for staged
  lcc = list-status M.  # list changed cached
  ldc = list-status D.  # list deleted cached

  list-mode = list-status
  lm = list-mode
  lmim = list-mode -i ' M'
  lim = list-mode -i ' M'
  lmm = list-mode ' M'

  deleted-by-them = list-status UD
  dbt = list-status UD

  deleted-by-us = list-status DU
  dbu = list-status DU

  added-by-them = list-status UA
  abt = list-status UA

  added-by-us = list-status AU
  abu = list-status AU

  both-deleted = list-status DD
  brm = list-status DD

  list-deleted = list-status ' D'
  ld = list-status ' D'

  laf = ls-new-files
  lnf = ls-new-files
  sz  = size
  szh = size -H
  szs = sizes
  total-size = size
  ts  = tree-sha
  tsz = total-size
